<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header with Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_green"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@android:drawable/ic_menu_revert"
                android:background="@drawable/circle_primary_dark"
                android:contentDescription="@string/back"
                app:tint="@color/white"
                android:padding="10dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/search_hikes"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Search Bar Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/white"
            android:elevation="2dp">

            <!-- Search Input with Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/searchIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@android:drawable/ic_menu_search"
                        app:tint="@color/primary_green"
                        android:contentDescription="Search"
                        android:layout_marginStart="12dp" />

                    <EditText
                        android:id="@+id/searchInput"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_toEndOf="@id/searchIcon"
                        android:layout_toStartOf="@id/clearSearchButton"
                        android:hint="Search hiking by name..."
                        android:inputType="text"
                        android:imeOptions="actionSearch"
                        android:background="@drawable/nav_item_background"
                        android:paddingStart="40dp"
                        android:paddingEnd="12dp"
                        android:textColor="@color/text_green"
                        android:textColorHint="@color/gray_text"
                        android:textSize="15sp"
                        android:maxLines="1" />

                    <ImageButton
                        android:id="@+id/clearSearchButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="@color/gray_text"
                        android:contentDescription="Clear search"
                        android:padding="8dp"
                        android:visibility="gone" />
                </RelativeLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/searchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Search"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/primary_green"
                    app:cornerRadius="8dp"
                    app:icon="@android:drawable/ic_menu_search"
                    app:iconTint="@color/white"
                    app:iconSize="18dp"
                    app:iconPadding="4dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:minWidth="100dp" />
            </LinearLayout>

            <!-- Filter Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/toggleFiltersButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/show_filters"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/primary_green"
                    app:cornerRadius="8dp"
                    app:icon="@android:drawable/ic_menu_sort_by_size"
                    app:iconTint="@color/white"
                    app:iconSize="16dp"
                    app:iconPadding="4dp"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/clearFiltersButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Clear"
                    android:textColor="#D32F2F"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    app:backgroundTint="#FFEBEE"
                    app:cornerRadius="8dp"
                    app:icon="@android:drawable/ic_menu_close_clear_cancel"
                    app:iconTint="#D32F2F"
                    app:iconSize="16dp"
                    app:iconPadding="4dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Semantic Search Toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:background="@color/primary_green_light">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Semantic Search (AI-powered)"
                    android:textColor="@color/text_green"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/semanticSearchSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    app:thumbTint="@drawable/switch_thumb"
                    app:trackTint="@drawable/switch_track" />
            </LinearLayout>
        </LinearLayout>

        <!-- Advanced Filters Section (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/filtersCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/primary_green_light"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/advanced_filters"
                android:textColor="@color/text_green"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Location Filter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="@color/text_green"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/primary_green"
                    app:hintTextColor="@color/primary_green"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/locationInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Filter by location"
                        android:inputType="text"
                        android:textColor="@color/text_green"
                        android:textColorHint="@color/gray_text" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Date Range -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Range"
                android:textColor="@color/text_green"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From Date"
                        android:textColor="@color/text_green"
                        android:textSize="13sp"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/startDateInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select date"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:textColor="@color/text_green"
                            android:textColorHint="@color/gray_text" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To Date"
                        android:textColor="@color/text_green"
                        android:textSize="13sp"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/endDateInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select date"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:textColor="@color/text_green"
                            android:textColorHint="@color/gray_text" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Difficulty Filter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Difficulty"
                    android:textColor="@color/text_green"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/primary_green"
                    app:hintTextColor="@color/primary_green"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp">

                    <AutoCompleteTextView
                        android:id="@+id/difficultySpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="All Difficulties"
                        android:inputType="none"
                        android:focusable="false"
                        android:textColor="@color/text_green"
                        android:textColorHint="@color/gray_text" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Length Range -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Length Range"
                android:textColor="@color/text_green"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min Length (km)"
                        android:textColor="@color/text_green"
                        android:textSize="13sp"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/minLengthInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="0"
                            android:inputType="numberDecimal"
                            android:textColor="@color/text_green"
                            android:textColorHint="@color/gray_text" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max Length (km)"
                        android:textColor="@color/text_green"
                        android:textSize="13sp"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/maxLengthInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="100"
                            android:inputType="numberDecimal"
                            android:textColor="@color/text_green"
                            android:textColorHint="@color/gray_text" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Parking Available -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parking Available"
                    android:textColor="@color/text_green"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="@color/primary_green"
                    app:hintTextColor="@color/primary_green"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp">

                    <AutoCompleteTextView
                        android:id="@+id/parkingSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Any"
                        android:inputType="none"
                        android:focusable="false"
                        android:textColor="@color/text_green"
                        android:textColorHint="@color/gray_text" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Results Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:background="@color/background_light">

            <TextView
                android:id="@+id/resultsCountText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/search_results"
                android:textColor="@color/text_green"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/filteredCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/gray_text"
                android:textSize="13sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Search Results RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchResultsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:clipToPadding="false" />

        <!-- Enhanced Empty State -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp"
            android:visibility="gone"
            android:background="@color/background_light">

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/primary_green_light"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_search"
                    app:tint="@color/primary_green"
                    android:contentDescription="@string/no_results_found" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No results found"
                android:textColor="@color/text_green"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/emptyStateMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_results_found"
                android:textColor="@color/gray_text"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clearAllFiltersButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear All Filters"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:backgroundTint="@color/primary_green"
                app:cornerRadius="8dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

