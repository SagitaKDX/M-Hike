<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Time and Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_recent_history"
                app:tint="@color/primary_green"
                android:contentDescription="@string/observation_time"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/observationTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2024-01-15 14:30"
                android:textColor="@color/primary_green"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/editButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/edit_observation"
                app:tint="@color/primary_green"
                android:padding="4dp"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/delete_observation"
                app:tint="@android:color/holo_red_light"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Observation Text -->
        <TextView
            android:id="@+id/observationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spotted a red-tailed hawk circling above the trail"
            android:textColor="@color/text_green"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Picture (if available) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/pictureCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/observationPicture"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/observation_photo" />
        </androidx.cardview.widget.CardView>

        <!-- Comments Section (if available) -->
        <LinearLayout
            android:id="@+id/commentsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/primary_green_light"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/observation_comments"
                android:textColor="@color/primary_green_dark"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/observationComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beautiful clear day, perfect visibility"
                android:textColor="@color/text_green"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Location Section (if available) -->
        <LinearLayout
            android:id="@+id/locationSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location_button"
                app:tint="@color/gray_text"
                android:contentDescription="@string/observation_location"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/observationLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="40.712776, -74.005974"
                android:textColor="@color/gray_text"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

